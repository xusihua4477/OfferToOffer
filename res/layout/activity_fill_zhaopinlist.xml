        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/tvStyle"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:maxEms="2"
                android:layout_gravity="center_vertical"
                android:text="学历要求" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_columnSpan="4"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <RadioButton
                    android:id="@+id/rbDazhuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="大专" />

                <RadioButton
                    android:id="@+id/rbBenKe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="本科" />

                <RadioButton
                    android:id="@+id/rbShuoshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="硕士及以上" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/tvStyle"
                android:layout_height="wrap_content"
                android:maxEms="2"
                android:text="工作年限" />

            <EditText
                android:id="@+id/etexperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:hint="要求最低多少年工作经验" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/tvStyle"
                android:layout_height="wrap_content"
                android:maxEms="2"
                android:text="薪资" />

            <EditText
                android:id="@+id/etSalaryLeast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:hint="最低多少K" />

            <TextView
                style="@style/tvStyle"
                android:text="K 到 " >

             
            </TextView>
               

                <EditText
                    android:id="@+id/etSalaryMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_horizontal"
                    android:hint="最高多少K" />

                <TextView
                    style="@style/tvStyle"
                    android:text="K" >
                </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="2"
                android:text="需求描述" />

            <EditText
                android:id="@+id/ablility_description"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:hint="需要怎样的人才请描述" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/tvStyle"
                android:text="所在地" />

            <Spinner
                android:id="@+id/spinner_citys"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:entries="@array/citys" />
        </LinearLayout>
   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/tvStyle"
                android:text="职位" />

            <EditText
                android:id="@+id/etZhiwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="招什么人" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/tvStyle"
                android:maxEms="2"
                android:text="悬赏金额" />

            <EditText
                android:id="@+id/etZhongjiefei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="你愿意出多少中介费" />

            <TextView
                style="@style/tvStyle"
                android:text="元" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不"
                android:visibility="invisible" />

            <Button
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:background="@drawable/btn_login_selector"
                android:gravity="center"
                android:onClick="btn_Publish"
              
                android:text="发布"
                android:textColor="#fff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不"
                android:visibility="invisible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不"
                android:visibility="invisible" />

            <Button
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray"
                android:onClick="btn_Return"
                android:text="返回" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>